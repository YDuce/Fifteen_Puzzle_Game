<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Guideline for aligning Back -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_bar_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <!-- Guideline for aligning Statistics -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_bar_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <!-- BottomAppBar for additional options -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        tools:ignore="BottomAppBar,MissingConstraints">

        <!-- Back Button inside CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="@id/bottom_bar_left_guideline"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/action_back"
                android:src="@drawable/ic_back"
                app:tint="@android:color/white" />
        </androidx.cardview.widget.CardView>

        <!-- Pause Button inside CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_gravity="center_horizontal|bottom">

            <ImageButton
                android:id="@+id/button_pause"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/action_pause"
                android:src="@drawable/ic_pause"
                app:tint="@android:color/white" />
        </androidx.cardview.widget.CardView>

        <!-- Statistics Button inside CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/bottom_bar_right_guideline"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/button_stats"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/action_stats"
                android:src="@drawable/ic_stats"
                app:tint="@android:color/white" />
        </androidx.cardview.widget.CardView>

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.constraintlayout.widget.ConstraintLayout>
