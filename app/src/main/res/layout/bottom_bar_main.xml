<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BottomAppBar at the bottom of the screen -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="BottomAppBar"
        tools:showIn="@layout/activity_main">

        <!-- Back Button inside CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageButton
                android:id="@+id/button_home"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/action_menu"
                android:src="@drawable/ic_home"
                app:tint="@android:color/holo_purple" />
        </androidx.cardview.widget.CardView>

        <!-- Pause Button inside CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageButton
                android:id="@+id/button_pause"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/action_pause"
                android:src="@drawable/ic_pause"
                app:tint="@android:color/holo_purple" />
        </androidx.cardview.widget.CardView>

        <!-- Restart Button inside CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageButton
                android:id="@+id/button_restart"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/action_restart"
                android:src="@drawable/ic_restart"
                app:tint="@android:color/holo_purple" />
        </androidx.cardview.widget.CardView>


        <!-- Statistics Button inside CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageButton
                android:id="@+id/button_stats"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/action_stats"
                android:src="@drawable/ic_stats"
                app:tint="@android:color/holo_purple" />
        </androidx.cardview.widget.CardView>

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.constraintlayout.widget.ConstraintLayout>
