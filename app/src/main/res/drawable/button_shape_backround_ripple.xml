<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#66000000"> <!-- Semi-transparent dark ripple color for noticeable shadow -->

    <!-- Background shape and shadowing -->
    <item android:drawable="@drawable/button_shape_and_backround" />

    <!-- Optional ripple mask to control ripple shape -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#888888" /> <!-- Darker gray for ripple mask shadow effect -->
            <corners android:radius="8dp" /> <!-- Ensure corners match the main shape -->
        </shape>
    </item>

</ripple>
