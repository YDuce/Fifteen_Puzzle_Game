<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Light gray shadow color -->
            <corners android:radius="8dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <!-- Main button shape with gradient and border -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Main button color -->
            <stroke
                android:width="2dp"
                android:color="#888888" /> <!-- Border color -->
            <corners android:radius="8dp" />
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#E0E0E0"
                android:angle="90" /> <!-- Gradient effect -->
        </shape>
    </item>

    <!-- Additional shape layer with a stroke and corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" /> <!-- Inner stroke -->
            <corners android:radius="4dp" /> <!-- Inner corner radius -->
        </shape>
    </item>

</layer-list>
