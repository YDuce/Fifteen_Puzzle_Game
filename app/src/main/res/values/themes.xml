<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FifteenPuzzleGame" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.FifteenPuzzleGame" parent="Base.Theme.FifteenPuzzleGame" />

    <!--     Style for the grid size buttons-->
    <style name="GridSizeButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/button_selection_width</item>
        <item name="android:layout_height">@dimen/button_selection_height</item>
        <item name="android:textSize">@dimen/button_selection_text_size</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#333333</item> <!-- Dark background color -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- White text color -->
        <item name="android:windowMinWidthMajor">90%</item> <!-- Optional: Set width -->
        <item name="android:windowMinWidthMinor">90%</item> <!-- Optional: Set width -->
    </style>

    <!-- Theme for FloatingActionButton and BottomAppBar -->
    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Customize BottomAppBar -->
        <item name="bottomAppBarStyle">@style/BottomAppBarStyle</item>

        <!-- Customize FloatingActionButton -->
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

        <item name="colorSurface">#FFFFFF</item> <!-- Background color for cards and other surfaces -->
        <item name="colorOnSurface">#000000</item> <!-- Text color on surfaces -->
    </style>

    <!-- BottomAppBar Style -->
    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">#0F9D58</item> <!-- Background color for BottomAppBar -->
        <item name="fabCradleMargin">10dp</item>
        <item name="fabCradleRoundedCornerRadius">10dp</item>
        <item name="fabCradleVerticalOffset">10dp</item>
    </style>

    <!-- FloatingActionButton Style -->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#0F9D58
        </item> <!-- Background color for FloatingActionButton -->
        <item name="fabSize">normal</item> <!-- Size of the FloatingActionButton -->
    </style>
</resources>